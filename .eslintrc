{
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parser": "@babel/eslint-parser",
	"plugins": ["react", "react-hooks"],
	"rules": {
		"react/prop-types": "off",
		"react-hooks/rules-of-hooks": "error",
		"react-hooks/exhaustive-deps": "warn"
	},
	"parserOptions": {
		"ecmaVersion": 2020,
		"ecmaFeatures": {
			"jsx": true
		},
		"sourceType": "module"
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"mocha": true
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
